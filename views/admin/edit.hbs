<div class="form_container">
    <form class='form_log-in' action="/admin/novedades/edit" method="post">
        <h1>Editar Novedad</h1>
        <input type="hidden" value={{novedad.id}} name="id">
        <input type="text" class='campo input' name="titulo" value="{{novedad.titulo}}" placeholder="Titulo">
        <textarea cols="30" rows="8" class="campo" name="cuerpo" placeholder="Cuerpo">{{novedad.cuerpo}}</textarea>
        <input type="text" class='campo input' name="fuente" value="{{novedad.fuente}}" placeholder="Fuente">
        <button class='campo button' type="submit">Guardar</button>
    {{#if error}}
        <div class="error">{{error}}</div>
    {{/if}}
    </form>
</div>